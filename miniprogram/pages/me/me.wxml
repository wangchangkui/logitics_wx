<view class="header">
  <view class="h_img">
    <van-image round width="6rem" height="6rem" src="{{user.headerImage}}" />
    <view class="h_info">
      <text style="font-size: 14px;" wx:if="{{user.username!= null}}">{{user.username}}</text>
      <text style="font-size: 14px;" wx:if="{{user.username == null}}" bindtap="LoginSys">请先登录 (点击我登录)</text>
      <van-divider />
      <text style="font-size: 10px;" bindtap="toInfo">点击查看更多信息</text>
    </view>
  </view>
</view>

<van-divider hairline ></van-divider>

<view class="bd">
  <van-grid column-num="3">
    <van-grid-item icon="{{item.icon}}" text="{{item.text}}" wx:for="{{ items }}" wx:key="url" url='{{item.url}}'/>
  </van-grid>
</view>

<van-divider hairline ></van-divider>

<view class="ft">
  <van-collapse accordion value="{{ activeNames }}" bind:change="onChange">
    <van-collapse-item title="联系客服" name="1">
      <view class="app_info_item">telephone：15282720317</view>
      <view class="app_info_item"> email：jandmla@163.com</view>
      <view class="app_info_item">QQ：2390925778</view>
      <view class="app_info_item">微信：jandmla</view>
      <van-button type="primary" block open-type="contact" size="small">在线人工服务</van-button>
    </van-collapse-item>
  </van-collapse>
  <van-collapse accordion value="{{ activeNames }}" bind:change="onChange">
    <van-collapse-item title="关于我们" name="3">
      逐浪科技，随波逐浪
    </van-collapse-item>
  </van-collapse>
</view>

<van-divider hairline ></van-divider>

<view class="ft">
  
  <van-toast id="van-toast" />
  <van-cell is-link title="意见反馈" link-type="navigateTo" url="../feedback/index" />
  <van-cell is-link title="把引用推荐给其他人" bind:click="onClick" />
  <van-share-sheet show="{{ showShare }}" title="立即分享给好友" options="{{ options }}"
    bind:select="onSelect" bind:close="onClose"/>
</view>
